{
  "name": "api.dave.io",
  "version": "0.1.0",
  "private": true,
  "description": "multipurpose personal API",
  "repository": "https://github.com/daveio/api.dave.io.git",
  "license": "MIT",
  "author": "Dave Williams <dave@dave.io>",
  "type": "module",
  "scripts": {
    "cf-typegen": "bun run wrangler types && bun -e \"Bun.write('worker-configuration.d.ts', '//@ts-nocheck\\n' + await Bun.file('worker-configuration.d.ts').text())\"",
    "types": "bun run cf-typegen",
    "deploy": "bun run wrangler deploy",
    "dev": "bun run wrangler dev",
    "start": "bun run wrangler dev",
    "typecheck": "bun run tsc --noEmit",
    "lint": "bun run biome check && trunk check -a",
    "format": "trunk fmt -a"
  },
  "dependencies": {
    "chanfana": "2.8.0",
    "hono": "4.7.10",
    "rss-parser": "^3.13.0",
    "zod": "3.25.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "22.15.19",
    "@types/service-worker-mock": "^2.0.4",
    "markdownlint-cli": "^0.45.0",
    "stylelint-config-standard": "^38.0.0",
    "wrangler": "4.15.2"
  },
  "packageManager": "bun@1.2.13",
  "engines": {
    "bun": "~1.2.13",
    "node": "~lts"
  },
  "trustedDependencies": ["@biomejs/biome", "esbuild", "sharp", "workerd"],
  "comments": {
    "ip-address-utils": "IP address utilities are implemented internally in src/lib/ip-address-utils.ts rather than using an external package"
  }
}
